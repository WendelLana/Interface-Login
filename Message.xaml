<Window x:Class="Wendel_d7_avaliacao.Message"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wendel_d7_avaliacao"
        mc:Ignorable="d"
        Title="Message" Height="180" Width="300"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid>
        <TextBlock Width="235" Height="29" Name="messageLabel"
               Text="Credenciais Inválidas!"
               TextAlignment="Center"
               VerticalAlignment="Center"
               HorizontalAlignment="Center"
               LineHeight="29"
               FontSize="24" FontFamily="{StaticResource Inter}" FontWeight="Regular" Foreground="Black"/>
    </Grid>
</Window>
